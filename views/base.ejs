
<%-include('header')-%>


     <div class="text-center center-div " id="login">
       <div class="container w-25  border py-5">
         <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for the existing user</span>
            <!-- <% if(locals.logout){ %>
              <div class="alert  text-center">
                <%= logout %>
              </div>
           <% } %> -->
         </div>
         <form action="/route/login" method="post" class="pt-2">
            <div class="form-group">
                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                <small class="form-text text-muted text-light"></small>
            </div>
            <div class="form-group pt-3">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div>
            <div class="form-group pt-3">
              <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
          </div>
         </form>
          <a href="/">Register</a>
       </div>
       
     </div>
      
    
     <div class="">
      <% if(locals.logout){ %>
        <div class="alert  text-center">
          <%= logout %>
        </div>
     <% } %>
     </div>


<%-include('footer')-%>    
